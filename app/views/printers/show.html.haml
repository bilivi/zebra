- model_class = Printer
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @printer.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @printer.description
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @printer.category_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), printer_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_printer_path(@printer), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), printer_path(@printer), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
